@using SrednjeSkoleApp.Web.Areas.ModulAdministrator.ViewModels
@model UcenikDodajVM

@{

***REMOVED***

<h2>Detalji ucenika</h2>

<form asp-area="ModulAdministrator" asp-action="Snimi" asp-controller="Ucenik">

    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#licni">Lični</a></li>
        <li><a data-toggle="tab" href="#kontakt">Kontakt</a></li>
        <li><a data-toggle="tab" href="#obrazovanje">Obrazovanje</a></li>
    </ul>

    <div class="tab-content">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="KorisnikKontaktId" />

        <div id="licni" class="tab-pane fade in active">
            <h3>Lični podaci</h3>

            <div class="form-group">
                <label>Ime: </label>
                <div>
                    <input asp-for="Ime" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label>Prezime: </label>
                <div>
                    <input asp-for="Prezime" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label>Korisničko ime: </label>
                <div>
                    <input asp-for="KorisnickoIme" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label>Lozinka: </label>
                <div>
                    <input asp-for="Lozinka" type="password" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label>Aktivan: </label>
                <div>
                    <input asp-for="Aktivan" type="checkbox" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label>Spol: </label>
                <div>
                    <input asp-for="Spol" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label>Datum rođenja: </label>
                <div>
                    <input asp-for="DatumRodjenja" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label>Mjesto rođenja: </label>
                <div>
                    <input asp-for="MjestoRodjenja" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label>JMBG: </label>
                <div>
                    <input asp-for="JMBG" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label>Prebivaliste: </label>
                <div>
                    <input asp-for="Prebivaliste" class="form-control" />
                </div>
            </div>

        </div>

        <div id="kontakt" class="tab-pane fade">
            <h3>Kontakt podaci</h3>

            <div class="form-group">
                <label>Email: </label>
                <div>
                    <input asp-for="Email" type="email" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label>Telefon: </label>
                <div>
                    <input asp-for="Telefon" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label>Adresa: </label>
                <div>
                    <input asp-for="Adresa" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label>Grad: </label>
                <div>
                    <input asp-for="Grad" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label>Opstina: </label>
                <div>
                    <input asp-for="Opstina" class="form-control" />
                </div>
            </div>

        </div>
        <div id="obrazovanje" class="tab-pane fade">
            <h3>Podaci o obrazovanju</h3>

            <div class="form-group">
                <label>Zvanje: </label>
                <div>
                    <input asp-for="ImeRoditelja" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label>Godina upisa: </label>
                <div>
                    <input asp-for="GodinaUpisa" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label>Smjer: </label>
                <div>
                    <select asp-for="SmjerId" asp-items="@Model.smjerovi" class="form-control">
                        <option value="@Model.SmjerId"></option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label>Razred </label>
                <div>
                    <select asp-for="RazredId" asp-items="@Model.razredi" class="form-control">
                        <option value="@Model.RazredId"></option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label>Naziv osnovne škole: </label>
                <div>
                    <input asp-for="NazivOsnovneSkole" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label>Prosjek ocjena u osnovnoj školi: </label>
                <div>
                    <input asp-for="ProsjekOcjenaOsnovnaSkola" class="form-control" />
                </div>
            </div>

            <input type="submit" value="Snimi" class="btn btn-success" />
        </div>
    </div>

</form>