                    <div class="form-group">
                        <label>Mjesto rođenja: </label>
                        <div>
                            <input asp-for="MjestoRodjenja" class="form-control"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>JMBG: </label>
                        <div>
                            <input asp-for="JMBG" class="form-control"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Prebivaliste: </label>
                        <div>
                            <input asp-for="Prebivaliste" class="form-control"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapse2">Kontakt podaci</a>
                </h4>
            </div>
            <div id="collapse2" class="panel-collapse collapse">
                <div class="panel-body">


                    <div class="form-group">
                        <label>Email: </label>
                        <div>
                            <input asp-for="Email" type="email" class="form-control"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Telefon: </label>
                        <div>
                            <input asp-for="Telefon" class="form-control"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Adresa: </label>
                        <div>
                            <input asp-for="Adresa" class="form-control"/>
