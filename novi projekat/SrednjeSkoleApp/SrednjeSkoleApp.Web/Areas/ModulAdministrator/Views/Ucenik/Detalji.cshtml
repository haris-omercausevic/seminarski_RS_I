                            <input asp-for="GodinaUpisa" class="form-control"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Smjer: </label>
                        <div>
                            <select asp-for="SmjerId" asp-items="@Model.smjerovi" class="form-control">
