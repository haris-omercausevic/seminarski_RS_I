            </select>
        </div>
    </div>

    <div class="form-group">
        <label>Školska godina: </label>
        <div>
            <select asp-for="skolskaGodinaId" asp-items="@Model.skolskeGodine" class="form-control">
                <option>(odaberite skolsku godinu)</option>
            </select>
        </div>
    </div>

    <input type="submit" value="Snimi" />
