<h2>Dodaj</h2>

<form asp-area="ModulAdministrator" asp-action="Snimi" asp-controller="Razred">
   <div class="form-group">
        <label>Razred: </label>
        <div>
            <input asp-for="razredBrojcano" class="form-control" />
            <span asp-validation-for="razredBrojcano" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label>Odjeljenje: </label>
        <div>
            <input asp-for="odjeljenje" class="form-control" />
