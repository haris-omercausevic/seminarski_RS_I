<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SrednjeSkoleApp.Web</title>
    
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="/css/site.css" />
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

    <script src="/jsFIT.js"></script>
    <script src="/js/site.js"></script>

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">SrednjeSkoleApp.Web</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="ModulAdministrator" asp-controller="Razred" asp-action="Index">Razred</a></li>
                    <li><a asp-area="ModulAdministrator" asp-controller="Nastavnik" asp-action="Index">Nastavnik</a></li>
                    <li><a asp-area="ModulAdministrator" asp-controller="Predmet" asp-action="Index">Predmet</a></li>
                    <li><a asp-area="ModulAdministrator" asp-controller="Smjer" asp-action="Index">Smjer</a></li>
                    <li><a asp-area="ModulAdministrator" asp-controller="Ucenik" asp-action="Index">Ucenik</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - SrednjeSkoleApp</p>
        </footer>
    </div>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
