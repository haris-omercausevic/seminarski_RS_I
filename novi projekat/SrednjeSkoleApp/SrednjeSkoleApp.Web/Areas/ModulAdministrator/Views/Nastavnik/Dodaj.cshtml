                            </div>
                        </div>

                        <div class="form-group">
                            <label>Grad: </label>
                            <div>
                                <input asp-for="Grad" class="form-control" />
                                <span asp-validation-for="Grad" class="text-danger"></span>

                            </div>
                        </div>

                        <div class="form-group">
                            <label>Opstina: </label>
                            <div>
                                <input asp-for="Opstina" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse3">Podaci o obrazovanju</a>
                    </h4>
                </div>
                <div id="collapse3" class="panel-collapse collapse">
                    <div class="panel-body">

                        <div class="form-group">
                            <label>Zvanje: </label>
                            <div>
                                <input asp-for="Zvanje" class="form-control" />
