<form asp-area="ModulAdministrator" asp-action="Snimi" asp-controller="Nastavnik">

    <div class="container">
        <h2>Dodaj nastavnika</h2>
        <div class="panel-group" id="accordion">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">Lični podaci</a>
                    </h4>
                </div>
                <div id="collapse1" class="panel-collapse collapse in">
                    <div class="panel-body">


                        <div class="form-group">
                            <label>Ime: </label>
                            <div>
                                <input asp-for="Ime" class="form-control" />
                                <span asp-validation-for="Ime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Prezime: </label>
                            <div>
                                <input asp-for="Prezime" class="form-control" />
                                <span asp-validation-for="Prezime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Korisničko ime: </label>
                            <div>
                                <input asp-for="KorisnickoIme" class="form-control" />
                                <span asp-validation-for="KorisnickoIme" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Lozinka: </label>
                            <div>
                                <input asp-for="Lozinka" type="password" class="form-control" />
                                <span asp-validation-for="Lozinka" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Aktivan: </label>
                            <div>
                                <input asp-for="Aktivan" type="checkbox" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Spol: </label>
                            <div>
                                <input asp-for="Spol" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Datum rođenja: </label>
                            <div>
                                <input asp-for="DatumRodjenja" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Mjesto rođenja: </label>
                            <div>
                                <input asp-for="MjestoRodjenja" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label>JMBG: </label>
                            <div>
                                <input asp-for="JMBG" class="form-control" />
                                <span asp-validation-for="JMBG" class="text-danger"></span>

                            </div>
                        </div>

                        <div class="form-group">
                            <label>Prebivaliste: </label>
                            <div>
                                <input asp-for="Prebivaliste" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>



            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse2">Kontakt podaci</a>
                    </h4>
                </div>
                <div id="collapse2" class="panel-collapse collapse">
                    <div class="panel-body">


                        <div class="form-group">
                            <label>Email: </label>
                            <div>
                                <input asp-for="Email" type="email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>

                            </div>
                        </div>

                        <div class="form-group">
                            <label>Telefon: </label>
                            <div>
