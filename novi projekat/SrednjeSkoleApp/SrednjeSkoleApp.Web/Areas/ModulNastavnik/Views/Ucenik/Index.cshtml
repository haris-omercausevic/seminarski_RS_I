<form asp-action="Trazi" asp-area="ModulNastavnik" method="get" asp-route-smjerId="@Model.smjerId" asp-route-razredId="@Model.razredId">
    <div class="form-group">
        <label>Ime: </label>
        <div>
            <input type="text" name="ime" value="@ViewData["imeFilter"]" />
        </div>
    </div>
    <div class="form-group">
        <label>Prezime: </label>
        <div>
            <input type="text" name="prezime" value="@ViewData["prezimeFilter"]" />
        </div>
    </div>
    <div class="form-group">
        <label>Email: </label>
        <div>
            <input type="text" name="email" value="@ViewData["emailFilter"]" />
        </div>
    </div>

    <div class="form-group">
        <label>Razred: </label>
        <div>
            <select asp-for="razredId" asp-items="@Model.razredi" class="form-control">
                <option>(odaberite razred)</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label>Smjer: </label>
        <div>
            <select asp-for="smjerId" asp-items="@Model.smjerovi" class="form-control">
                <option>(odaberite smjer)</option>
            </select>
        </div>
    </div>

    <input type="submit" value="Trazi" class="btn btn-info" />
</form>


