<h3>Pretraga</h3>


<form asp-action="Trazi" asp-area="ModulNastavnik" asp-route-predmetId="@Model.predmetId" method="get">
    <div class="form-group">
        <label>Predmet: </label>
        <div>
            <select asp-for="predmetId" asp-items="@Model.predmeti" class="form-control">
                <option value="0">(odaberite predmet)</option>
            </select>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Trazi</button>
</form>


<h3>Materijali</h3>

