    <thead>
        <tr>
            <th>Naziv</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Files)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Download" asp-route-blobName="@item.BlobName" asp-route-name="@item.Name" class="btn btn-primary">Download</a>
                    <a asp-action="Delete" asp-route-blobName="@item.BlobName" class="btn btn-danger">Delete</a>
